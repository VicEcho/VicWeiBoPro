extends layout

block content
  script(type="text/javascript").
    function vv() {
      location.href = '/artical/edit'; 
    }
  include nav.jade
  div.Row#content-div
    div.col-lg-9
      div.page-header
        h3 日志列表
      ul(class="media-list")
        each page in pageList
          li.media
            div.media-left
              -var time = page.createTime
              -var year = time.split('-')[0] + '年'
              -var mouth = time.split('-')[1] + '月'
              -var day = time.split('-')[2] + '日'
              -var newData = mouth + '' + day
              div(style="width: 56px")
                div.page-list--createTime #{newData}
                div.page-list--createTime2 #{year}
            div.media-body
              span.page-list-title
                a.page-list-a #{page.title}
      div
        div.col-lg-2.col-lg-offset-9
        button(class="btn btn-warning" onclick="vv()") 新增
    div.col-lg-3
      div(style="margin-top: 44px")
        h3 关于作者
        span Vic Zhang
        span(style="margin-left: 10%") 江苏省 南京市
      div(style="background-color: blue; width: 100%; height: 600px")
  include footer.jade